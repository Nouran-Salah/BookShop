@model CreateProductModel
@{
    ViewData["Title"] = "Product";
}
<div>
    <h1>Create New Product</h1>
	<form asp-action="CreateProduct" method="post">
		
	<label asp-for="Title">Product Name :</label>
	<input asp-for="Title" class="form-control border-2" placeholder="Enter product title" />
	<br />
	<label asp-for="Description">Product Description :</label>
	<input asp-for="Description" class="form-control border-2" placeholder="Enter description" />
	<br />
	<label asp-for="Author">Author Name :</label>
	<input asp-for="Author" class="form-control border-2" placeholder="Enter author name" />
	<br />
	<label asp-for="price">Product price :</label>
	<input asp-for="price" class="form-control border-2" placeholder="Enter price" />
	<br />
		<label asp-for="CategoryName">Category name :</label>
	<input asp-for="CategoryName" class="form-control border-2" placeholder="Enter Category name" />
	<br />

	<div class="d-flex justify-content-center">
		<button class="btn btn-primary mx-3 px-3 py-2" type="submit">Create</button>
			<a class="btn btn-secondary " asp-action="GetAllProducts">View all Products</a>
		</div>
	</form>

	
</div>