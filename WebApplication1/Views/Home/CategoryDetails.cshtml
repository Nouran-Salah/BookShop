@model CategoryDetailsViewModel

@{
	ViewData["Title"] = "Category Details";
}

<div>
	<h1 class="text-center">Category Details</h1>
	<h2 class="my-4">@Model.catName</h2>
	<div class="fs-4 text-dark">
		<p>Category Order: @Model.catOrder</p>
		<p>Is Active: @(Model.markedAsDeleted ? "No" : "Yes")</p>
		<p>Created On: @Model.createdDate.ToString("dd/MM/yyyy")</p>
	</div>
	<br />
	<a class="btn btn-primary py-3 px-2" asp-action="GetAllCategories" >Back To Categories</a>


</div>