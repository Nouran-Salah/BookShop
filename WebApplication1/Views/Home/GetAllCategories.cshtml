@using Web.Models.Models
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category List";
}

<h1>Categories</h1>
<table class="table">
    <thead>
        <tr>
        <th>Category Name</th>
        <th>Category Order</th>
        <th>IsActive</th>
        <th>Edit</th>
        <th>Details</th>
        <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var cat in Model){
             <tr>
             <td> @cat.catName</td>
             <td> @cat.catOrder</td>
             <td> @(cat.markedAsDeleted? "No":"Yes")</td>
                    <td><a class="btn btn-primary" asp-action="EditCategory" asp-route-id="@cat.Id">Edit</a></td>
                    <td><a class="btn btn-secondary" asp-action="CategoryDetails" asp-route-id="@cat.Id">Details</a></td>
                    <td><a class="btn btn-danger" asp-action="DeleteCategory" asp-route-id="@cat.Id">Delete</a></td>
             </tr>
            }
        }
    </tbody>
</table>